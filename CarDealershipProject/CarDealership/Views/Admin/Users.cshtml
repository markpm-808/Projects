@model List<CarDealership.Models.Queries.User>
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<p><a href="@Url.Action("AddUser","Admin")"><u>Add a new User</u></a></p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.LastName</td>
            <td>@user.FirstName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td><a href ='@Url.Action("EditUser","Admin", new { id = user.UserID})'><u>edit</u></a></td>
        </tr>
        }

   </tbody>
</table>