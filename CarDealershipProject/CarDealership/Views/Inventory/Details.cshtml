@model CarDealership.Models.Queries.DetailsVehicle

@{
    ViewBag.Title = "Details";
}

<h2>Vehicle Details</h2>
<div class="col-xs-12" id="details">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 pull-left" id="vehicleTop">
            <span>@Model.Year @Model.MakeName @Model.ModelName</span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-3 pull-left">
            <img src="@Url.Content("~/Images/" + Model.PictureFileName)" />
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3 col" style="margin-top:10px;">
            <p><b>Body Style: </b>@Model.BodyStyleName</p>
            <p><b>Trans: </b>@Model.Transmission</p>
            <p><b>Color: </b>@Model.ColorName</p>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3" style="margin-top:10px;">
            <p><b>Interior: </b> @Model.Interior</p>
            <p><b>Mileage: </b>@Model.Mileage</p>
            <p><b>VIN #: </b> @Model.VinNumber</p>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3" id="vehiclePrices">
            <p><b>Sale Price: </b>@Model.SalePrice.ToString("c0")</p>
            <p><b>MSRP: </b>@Model.MSRP.ToString("c0")</p>
        </div>
    </div>
    <div class="row center">
        <div class="col-md-offset-3">
            <p><b>Descrpition: </b>@Model.Description</p>
        </div>
    </div>
    <div class="row" id="contactButton">
        <div class="col-md-offset-10">
            @{
                if (Model.Purchased == true)
                {
                    <span><b>Unavailable-SOLD</b></span>
                }
                else
                {
                   <button onclick="location.href='@Url.Action("Contact","Home", new { vinNumber = ViewBag.VinNumber })'" ;>Contact Us</button>
                }
            }

        </div>

    </div>

</div>

